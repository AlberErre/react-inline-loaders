{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "react/prefer-stateless-function": 0,
    "react/no-multi-comp": 0,
    "react/jsx-space-before-closing": 0,
    "react/require-extension": 0,
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "comma-dangle": 0,
    "max-len": [
      2,
      250,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false
      }
    ],
    "new-cap": [
      1,
      {
        "capIsNew": false
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": 0,
    "no-alert": 0
  },
  "plugins": [
    "react",
    "import"
  ],
  "parser": "babel-eslint",
  "settings": {
    "import/resolve": {
      "moduleDirectory": [
        "node_modules",
        "src"
      ]
    }
  }
}
