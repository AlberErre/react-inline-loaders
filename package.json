{
  "name": "react-inline-loaders",
  "version": "1.0.3",
  "description": "React inline loaders (components)",
  "keywords": [
    "css-modules",
    "inline",
    "loaders",
    "react",
    "reactjs"
  ],
  "homepage": "https://github.com/raulanatol/react-inline-loaders#readme",
  "bugs": {
    "url": "https://github.com/raulanatol/react-inline-loaders/issues"
  },
  "license": "MIT",
  "author": "raulanatol",
  "main": "dist",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raulanatol/react-inline-loaders.git"
  },
  "scripts": {
    "dist": "rm -Rf .cache dist && parcel build src/index.ts",
    "start": "parcel index.html",
    "test": "jest"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-css-modules": "^4.7.3",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.11",
    "@types/jest": "^23.1.4",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "autoprefixer": "^8.6.4",
    "cssnano": "^3.10.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.2.0",
    "jest-css-modules": "^1.1.0",
    "onecolor": "^3.0.5",
    "parcel-bundler": "^1.9.4",
    "postcss": ">=6 <7",
    "postcss-camel-case": "^1.0.1",
    "postcss-font-magician": "^2.2.1",
    "postcss-for": "^2.1.1",
    "postcss-import": "^11.1.0",
    "postcss-import-url": "^3.0.4",
    "postcss-modules": "^1.1.0",
    "postcss-preset-env": "^5.2.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "pre-push": [
    "test"
  ],
  "user": "raulanatol",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupFiles": [
      "<rootDir>/config/jest/setup.js"
    ]
  }
}
